<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:background="#E40505"-->
        <!--&gt;-->
     <!--<TextView-->
         <!--android:layout_width="wrap_content"-->
         <!--android:layout_height="50dp"-->
         <!--android:text="Card Payment :"-->
         <!--android:textSize="30dp"-->
         <!--android:textColor="#fff"-->
         <!--android:textStyle="bold"-->
         <!--android:layout_marginLeft="5dp"-->
         <!--/>-->
    <!--</LinearLayout>-->
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        >
        <ImageView
            android:layout_width="390dp"
            android:layout_height="200dp"
            android:src="@drawable/card"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="@drawable/numbrng"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Details : "
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Number :"
            android:textSize="20dp"
            android:textColor="#000"
             android:id="@+id/cardtview"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/numbrng"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="16"
            android:id="@+id/cardetext"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Holder Name :"
            android:textSize="20dp"
            android:textColor="#000"
            android:id="@+id/nametview"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/numbrng"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="16"
            android:id="@+id/nameetext"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000"
            android:text="CVV:"

            android:id="@+id/cvvtview"
            />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:maxLength="3"
            android:gravity="center"
            android:background="@drawable/numbrng"

            android:id="@+id/cvvetxt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000"
            android:text="Expry Date:"
            android:layout_marginLeft="10dp"

            />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15dp"
            android:maxLength="5"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/numbrng"
         />
    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textColor="#fff"
        android:text="Proceed to pay"
        android:layout_marginTop="70dp"
android:background="@drawable/buttonbg"
        />


    </LinearLayout>

</ScrollView>
</LinearLayout>

